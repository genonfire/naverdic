{
  "background": {
    "scripts": ["background.js", "jquery-3.1.1.min.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Naver Dic"
  },
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "http://endic.naver.com/*",
    "https://openapi.naver.com/*"
  ],
  "content_scripts": [{
    "matches": [ "*://*/*" ],
    "js": ["content.js", "jquery-3.1.1.min.js"],
    "run_at": "document_idle",
    "all_frames": true
  }],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "manifest_version": 2,
  "name": "네이버 사전 (Naver Dictionary)",
  "description": "직접 단어를 입력하거나 웹페이지의 영어 단어를 선택해 영단어의 뜻을 보여줍니다.",
  "web_accessible_resources": ["jquery-3.1.1.min.js"],
  "version": "1.6"
}
